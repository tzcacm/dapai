<view>
  <view style="padding-top:{{cover_state ? bar_Height + 44 : 0}}px;"></view>
  <view class='status-bar {{bordershow?"bordershow":""}}' style="background-color:{{backgroundbar}};">
    <view class='goBack' bindtap='goBack' style="padding-top:{{bar_Height}}px;" wx:if="{{showLeftBtn}}">
      <image src='../static/gobackIcon.png' class="goBackIcons" wx:if="{{pagesLen!=1}}"></image>
      <image src='../static/homeicon.png' class="homeicon" wx:if="{{pagesLen==1}}"></image>
    </view>
    <view class="tabar {{my_class ? 'tabar2':''}}" style="padding-top:{{bar_Height}}px;">
      <text style="color:{{color}};">{{title}}</text>
    </view>
  </view>
</view>